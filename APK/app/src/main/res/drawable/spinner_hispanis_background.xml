<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Borde del Spinner -->
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#5D4037"/> <!-- Borde marrón -->
                    <corners android:radius="4dp"/> <!-- Esquinas redondeadas -->
                    <solid android:color="@android:color/transparent"/> <!-- Fondo transparente -->
                </shape>
            </item>
            <!-- Flecha del Spinner -->
            <item android:gravity="end|center_vertical" android:right="8dp">
                <vector android:width="24dp" android:height="24dp" android:viewportWidth="24" android:viewportHeight="24">
                    <path android:fillColor="#5D4037" android:pathData="M7,10l5,5 5,-5z"/> <!-- Flecha marrón -->
                </vector>
            </item>
        </layer-list>
    </item>
</selector>