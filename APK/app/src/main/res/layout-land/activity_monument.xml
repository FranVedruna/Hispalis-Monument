<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/hispanis_light"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewMonumento"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Foto del monumento" />

        <TextView
            android:id="@+id/tvNombreMonumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/PlayfairTextStyle"
            android:textSize="40sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvDescripcionMonumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DefaultTextViewStyle"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/linearLayoutTipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_gravity="start" />

        <Button
            android:id="@+id/btnEliminarMonumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar monumento"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>

